

# --------------- user stuff ------------------- #
# Key bindings
bindkey '^[[1;5D' backward-word
bindkey '^[[1;5C' forward-word
bindkey "^[[1;3C" forward-word
bindkey "^[[1;3D" backward-word

# Aliases

# ssh
if [ -f ~/.ssh_aliases ]; then
    . ~/.ssh_aliases
fi

# vim
alias vim="nvim"

# fs navigation
alias ll='ls -lah'
alias ..='cd ..'
alias ~='cd ~'



# starship
eval "$(starship init zsh)"


# github copilot cli
eval "$(github-copilot-cli alias -- "$0")"
